{
	"version": "2.0.0",
	"tasks": [

		{
			"type": "cppbuild",
			"label": "C/C++: g++ build CLIENT",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I",
                "${workspaceFolder}/common",
				"-o",
				"${workspaceFolder}/client.exe",
				"-g",
				"${workspaceFolder}/client.cpp",
				"${workspaceFolder}/common/client_udp.cpp",
				"${workspaceFolder}/common/rnd.cpp",
				"${workspaceFolder}/common/state_mashine.cpp"

			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group":"build",
			"detail": "compiler: /usr/bin/g++"
		},

		{
			"type": "cppbuild",
			"label": "C/C++: g++ build SERVER",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I",
                "${workspaceFolder}/common",
				"-o",
				"${workspaceFolder}/server.exe",
				"-g",
				"${workspaceFolder}/server.cpp",
				"${workspaceFolder}/common/rnd.cpp",
				"${workspaceFolder}/common/server_udp.cpp",

			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group":"build",
			"detail": "compiler: /usr/bin/g++"
		},

		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file ",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},

